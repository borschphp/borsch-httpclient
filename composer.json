{
  "name": "borschphp/http-client",
  "description": "A minimal PSR-18 HTTP Client.",
  "license": "MIT",
  "authors": [
    {
      "name": "Alexandre Debussch√®re",
      "email": "alexandre.debusschere@hey.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Borsch\\Http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.3",
    "ext-curl": "*",
    "psr/http-message": "^2.0",
    "psr/http-factory": "^1.1",
    "psr/http-client": "^1.0"
  },
  "require-dev": {
    "laminas/laminas-diactoros": "^3.6",
    "phpstan/phpstan": "^2.1",
    "pestphp/pest": "^4.1",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
